{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./src/*",
    "src/components/types"
  ],
  "exclude": [
    "node_modules/*"
  ],
  "noImplicitAny": false,
  "strictNullChecks": true,
  "noImplicitThis": true,
  "alwaysStrict": true
}
